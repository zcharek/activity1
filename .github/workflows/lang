name: lang 
on:
  push: 
    branches:
      - "lang"

jobs: 
  french-job:
   if: vars.LANG == 'FR'
   runs-on: ubuntu-latest
   steps:
     - name: print
       run: echo "l'utilisateur ${{github.actor}} parle fran√ßais." 
  
  other-job:
   if: vars.LANG != 'FR'
   runs-on: ubuntu-latest
   steps:
     - name: print
       run: echo "user ${{github.actor}} speaks english."
